<div class="page-header">
  <h1>Director #<%= @director.id %></h1>
</div>

<p><a href="/directors" class="btn btn-primary">Go Back</a></p>

<dl class="dl-horizontal">
  <dt>Dob</dt>
  <dd><%= @director.dob %></dd>

  <dt>Name</dt>
  <dd><%= @director.name %></dd>

  <dt>Bio</dt>
  <dd><%= @director.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @director.image_url %>" width="320"></dd>

  <dt>Filmography</dt>
  <dd>
    <ul>
      <% Movie.where({ :director_id => @director.id }).each do |movie| %>
        <li><%= movie.title %> (<%= movie.year %>)</li>
      <% end %>
    </ul>
  </dd>

</dl>
