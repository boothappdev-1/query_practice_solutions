<div class="page-header">
  <h1>Roles</h1>
</div>

<p><a href="/roles/new_form" class="btn btn-primary">Add a New Role</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Character name</th>
      <th>Movie</th>
      <th>Actor</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.character_name %></td>
        <td><a href="/movies/<%= role.movie_id %>"><%= Movie.find_by({ :id => role.movie_id }).title %></a></td>
        <td><a href="/actors/<%= role.actor_id %>"><%= Actor.find_by({ :id => role.actor_id }).name %></a></td>
        <td>
          <a href="/roles/<%= role.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/roles/<%= role.id %>/edit_form" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_role/<%= role.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate(@roles) %>
