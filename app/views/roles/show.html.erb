<div class="page-header">
  <h1>Role #<%= @role.id %></h1>
</div>

<p><a href="/roles" class="btn btn-primary">Go Back</a></p>

<dl class="dl-horizontal">
  <dt>Character name</dt>
  <dd><%= @role.character_name %></dd>

  <dt>Movie</dt>
  <dd><%= Movie.find_by({ :id => @role.movie_id }).title %></dd>

  <dt>Actor</dt>
  <dd><%= Actor.find_by({ :id => @role.actor_id }).name %></dd>

</dl>
