<div class="page-header">
  <h1>Role #<%= @role.id %></h1>
</div>

<p><a href="/roles" class="btn btn-primary">Go Back</a></p>

<dl class="dl-horizontal">
  <dt>Character name</dt>
  <dd><%= @role.character_name %></dd>

  <dt>Movie</dt>
  <dd><a href="/movies/<%= @role.movie_id %>"><%= Movie.find_by({ :id => @role.movie_id }).title %></a></dd>

  <dt>Actor</dt>
  <dd><a href="/actors/<%= @role.actor_id %>"><%= Actor.find_by({ :id => @role.actor_id }).name %></a></dd>

</dl>
